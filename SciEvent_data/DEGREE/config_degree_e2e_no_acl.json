    "train_batch_size": 4,
    "eval_batch_size": 4,
    "accumulate_step": 2,
    "learning_rate": 1e-5,
    "weight_decay": 1e-5,
    "grad_clipping": 5.0,

    "beam_size": 3,
    "max_length": 1024,
    "max_output_length": 100,
    "ignore_first_header": false
