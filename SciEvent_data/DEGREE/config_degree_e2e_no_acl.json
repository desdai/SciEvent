{
    "dataset": "ace05e",
    "gpu_device": 0,
    "seed": 0,
  
    "train_file": "./SciEvent_data/DEGREE/ablation/no_acl/train_without_ACL.json",
    "dev_file": "./SciEvent_data/DEGREE/all_splits/dev.json",
    "test_file": "./SciEvent_data/DEGREE/all_splits/test.json",
    
    "finetune_dir": "./data/degree_e2e_scievent/no_acl/",
    "train_finetune_file": "./data/degree_e2e_scievent/no_acl/train_all.pkl",
    "dev_finetune_file": "./data/degree_e2e_scievent/no_acl/dev_all.pkl",
    "test_finetune_file": "./data/degree_e2e_scievent/no_acl/test_all.pkl",
    "vocab_file": "./data/degree_e2e_scievent/no_acl/vocab.json",

    "output_dir": "./output/degree_e2e_scievent/no_acl/",
    "cache_dir": "./cache",
    "model_name": "facebook/bart-large",

    "input_style": ["event_type_sent", "keywords", "template"],
    "output_style": ["trigger:sentence", "argument:sentence"],

    "n_negative": 15,
    "max_epoch": 45,
